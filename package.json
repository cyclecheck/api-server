{
  "name": "cyclecheck-server",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "bin": "./dist/main.js",
  "description": "Backend API for CycleCheck mobile app.",
  "author": "Jordon de Hoog <jordon.dehoog@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/cyclecheck/api-server"
  },
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "rimraf dist/server && concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "package:docker": "./deploy/package-docker.sh",
    "package:node": "./deploy/package-node.sh",
    "prepackage": "rimraf packages && npm run build",
    "package": "concurrently 'npm run package:docker' 'npm run package:node'",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@google/maps": "0.5.5",
    "@hapi/joi": "15.0.3",
    "@nestjs/common": "6.3.1",
    "@nestjs/core": "6.3.1",
    "@nestjs/platform-fastify": "6.3.1",
    "@nestjs/typeorm": "6.1.2",
    "@types/hat": "0.0.0",
    "cache-manager": "2.9.1",
    "darkskyapi-ts": "1.0.2",
    "dotenv": "8.0.0",
    "fs-extra": "8.0.1",
    "hat": "0.0.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.5.2",
    "sqlite3": "4.0.8",
    "typeorm": "0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "6.3.1",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@types/cache-manager": "1.2.7",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.16.1",
    "@types/fs-extra": "7.0.0",
    "@types/google__maps": "0.5.5",
    "@types/hapi__joi": "15.0.1",
    "@types/jest": "24.0.13",
    "@types/node": "12.0.5",
    "@types/supertest": "2.0.7",
    "commitizen": "3.1.1",
    "concurrently": "4.1.0",
    "cz-conventional-changelog": "2.1.0",
    "husky": "2.4.0",
    "jest": "24.8.0",
    "lint-staged": "8.2.0",
    "nodemon": "1.19.1",
    "pkg": "4.4.0",
    "prettier": "1.17.1",
    "semantic-release": "15.13.12",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.2.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.17.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.5.1",
    "wait-on": "3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pkg": {
    "scripts": "node_modules/cache-manager/lib/stores/*.js"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ],
    "{src,test}/**/*.{ts,vue,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog"
    ],
    "publish": [
      {
        "path": "@semantic-release/github",
        "assets": [
          "packages/*.zip",
          "CHANGELOG.md"
        ]
      }
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  }
}
