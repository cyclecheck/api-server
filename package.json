{
  "name": "cyclecheck-server",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "description": "Backend API for CycleCheck mobile app.",
  "author": "Jordon de Hoog <jordon.dehoog@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/cyclecheck/api-server"
  },
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc -p tsconfig.build.json && chmod +x dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"*.{json,md}\"",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:dev": "rimraf dist/server && concurrently --handle-input \"tsc -w -p tsconfig.build.json\" \"wait-on dist/index.js && nodemon\"",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "package:standalone": "./deploy/package-standalone.sh",
    "package:node": "./deploy/package-node.sh",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@google/maps": "1.1.0",
    "@hapi/joi": "17.1.0",
    "@nestjs/common": "6.11.7",
    "@nestjs/core": "6.11.7",
    "@nestjs/platform-fastify": "6.11.7",
    "@nestjs/typeorm": "6.3.1",
    "@types/hat": "0.0.1",
    "cache-manager": "2.11.1",
    "darkskyapi-ts": "1.0.6",
    "dotenv": "8.2.0",
    "fs-extra": "8.1.0",
    "hat": "0.0.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.4",
    "semver": "7.1.3",
    "sqlite3": "4.1.1",
    "typeorm": "0.2.22",
    "yargs": "15.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "6.11.7",
    "@semantic-release/changelog": "5.0.0",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@types/cache-manager": "2.10.1",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.1",
    "@types/fs-extra": "8.0.1",
    "@types/google__maps": "0.5.12",
    "@types/hapi__joi": "16.0.10",
    "@types/jest": "25.1.2",
    "@types/node": "12.12.27",
    "@types/semver": "7.1.0",
    "@types/supertest": "2.0.8",
    "commitizen": "4.0.3",
    "concurrently": "5.1.0",
    "cz-conventional-changelog": "3.1.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lint-staged": "10.0.7",
    "nodemon": "2.0.2",
    "pkg": "4.4.3",
    "prettier": "1.19.1",
    "semantic-release": "17.0.4",
    "supertest": "4.0.2",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "9.0.0",
    "typescript": "3.7.5",
    "wait-on": "4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pkg": {
    "scripts": "node_modules/cache-manager/lib/stores/*.js"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ],
    "{src,test}/**/*.{ts,vue,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}