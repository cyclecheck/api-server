{
  "name": "cyclecheck-server",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "description": "Backend API for CycleCheck mobile app.",
  "author": "Jordon de Hoog <jordon.dehoog@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/cyclecheck/api-server"
  },
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "build": "tsc -p tsconfig.build.json && chmod +x dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"*.{json,md}\"",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:dev": "rimraf dist/server && concurrently --handle-input \"tsc -w -p tsconfig.build.json\" \"wait-on dist/index.js && nodemon\"",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "package:standalone": "./deploy/package-standalone.sh",
    "package:node": "./deploy/package-node.sh",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@google/maps": "1.1.3",
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "7.6.13",
    "@nestjs/core": "7.6.13",
    "@nestjs/platform-fastify": "7.6.13",
    "@nestjs/typeorm": "7.1.5",
    "@types/hat": "0.0.1",
    "cache-manager": "3.4.0",
    "darkskyapi-ts": "1.0.6",
    "dotenv": "8.2.0",
    "fs-extra": "9.1.0",
    "hat": "0.0.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.6",
    "semver": "7.3.4",
    "sqlite3": "5.0.2",
    "typeorm": "0.2.31",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@nestjs/testing": "7.6.13",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@types/cache-manager": "3.4.0",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.11",
    "@types/express-serve-static-core": "4.17.18",
    "@types/fs-extra": "9.0.8",
    "@types/google__maps": "0.5.14",
    "@types/hapi__joi": "17.1.6",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@types/semver": "7.3.4",
    "@types/serve-static": "1.13.9",
    "@types/supertest": "2.0.10",
    "commitizen": "4.2.3",
    "concurrently": "6.0.0",
    "cz-conventional-changelog": "3.3.0",
    "git-cz": "4.7.6",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "nodemon": "2.0.7",
    "pkg": "4.4.9",
    "prettier": "2.2.1",
    "semantic-release": "17.4.0",
    "supertest": "6.1.3",
    "ts-jest": "26.5.2",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "9.0.0",
    "typescript": "4.2.2",
    "wait-on": "5.2.1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "pkg": {
    "scripts": "node_modules/cache-manager/lib/stores/*.js"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ],
    "{src,test}/**/*.{ts,vue,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
